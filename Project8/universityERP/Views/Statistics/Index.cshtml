@model IEnumerable<universityERP.Models.Student>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Statistics </h2>

<br />

<div class="row" style="display:flex;justify-content:space-around">
    <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
        <div class="card">
            <div class="card-body p-4">
                <div class="row">
                    <div class="col-7">
                        <div class="numbers">
                            <p class="text-sm mb-0 text-capitalize font-weight-bold" style="text-align:center"> Registered Students</p>
                            <h4 class="font-weight-bolder mb-0" style="text-align:center ">
                                @Model.Count(x => x.isAccepted == true || x.isAccepted == false)
                            </h4>
                        </div>
                    </div>
                    <div class="col-4 text-end">
                        <div class="icon icon-shape bg-gradient-primary shadow text-center border-radius-md">
                            <i class="fa-solid fa-users" text-lg opacity-10" aria-hidden="true"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
        <div class="card">
            <div class="card-body p-4">
                <div class="row">
                    <div class="col-7">
                        <div class="numbers">
                            <p class="text-sm mb-0 text-capitalize font-weight-bold" style="text-align:center">All Accepted Students</p>
                            <h4 class="font-weight-bolder mb-0" style="text-align:center ">
                                @Model.Count(x => x.isAccepted == true)
                            </h4>
                        </div>
                    </div>
                    <div class="col-4 text-end">
                        <div class="icon icon-shape bg-gradient-primary shadow text-center border-radius-md">
                            <i class="fa-solid fa-users" text-lg opacity-10" aria-hidden="true"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
        <div class="card">
            <div class="card-body p-4">
                <div class="row">
                    <div class="col-7">
                        <div class="numbers">
                            <p class="text-sm mb-0 text-capitalize font-weight-bold" style="text-align:center"> Not Accepted Students</p>
                            <h4 class="font-weight-bolder mb-0" style="text-align:center ">
                                @Model.Count(x => x.isAccepted == false)
                            </h4>
                        </div>
                    </div>
                    <div class="col-4 text-end">
                        <div class="icon icon-shape bg-gradient-primary shadow text-center border-radius-md">
                            <i class="fa-solid fa-users" text-lg opacity-10" aria-hidden="true"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<br />
<br />
<br />
<br />
<div style="display:flex;justify-content:space-around">
    <img src="@Url.Action("CreateBar")" alt="Bar Chart using MVC" title="Bar Chart" />
    <img src="@Url.Action("CreatePie")" alt="Pie Chart using MVC" title="Bar Chart" />

</div>