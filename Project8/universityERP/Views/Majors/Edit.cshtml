@model universityERP.Models.Major

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

}

<main class="main-content  mt-0">
    <section>
        <div class="page-header min-vh-75">
            <div class="container">
                <div class="row">
                    <div class="col-xl-7 col-lg-6 col-md-6 d-flex flex-column mx-auto">
                        <div class="card card-plain mt-8" style="margin-top:20px !important">
                            <div class="card-header pb-0 text-left bg-transparent">
                                <h3 class="font-weight-bolder text-info text-gradient">Edit</h3>

                            </div>
                            <!-- Form start -->
                            @using (Html.BeginForm("Edit", "Majors", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
                            {
                                @Html.HiddenFor(model => model.majorId)
                                @Html.AntiForgeryToken()
                                <div class="card-body">
                                    <form role="form">
                                        <label>Major Name</label>
                                        <div class="mb-3">
                                            @Html.EditorFor(model => model.majorName, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.majorName, "", new { @class = "text-danger" })
                                        </div>
                                        <label>Major Description</label>
                                        <div class="mb-3">
                                            @Html.EditorFor(model => model.majorDescription, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.majorDescription, "", new { @class = "text-danger" })
                                        </div>
                                        <label>Major Image</label>
                                        <div class="mb-3">
                                            <input type="file" name="majorImage" value="" />
                                        </div>
                                        <label>Hours</label>
                                        <div class="mb-3">
                                            @Html.EditorFor(model => model.numberOfHours, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.numberOfHours, "", new { @class = "text-danger" })
                                        </div>
                                        <label>HourPrice</label>
                                        <div class="mb-3">
                                            @Html.EditorFor(model => model.majorHourPrice, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.majorHourPrice, "", new { @class = "text-danger" })
                                        </div>
                                        <label>Facility</label>
                                        <div class="mb-3">
                                            @Html.DropDownList("facilityId", null, htmlAttributes: new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.facilityId, "", new { @class = "text-danger" })
                                        </div>

                                        <div class="text-center">
                                            <input type="submit" value="Save" class="btn bg-gradient-info w-100 mt-4 mb-0" />

                                        </div>
                                        <br />

                                        <div class="text-center">
                                            <a href="~/Majors/Index" class="btn bg-gradient-dark w-100">
                                                Back to List
                                            </a>

                                        </div>
                                    </form>
                                </div>
                            }

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>
</main>