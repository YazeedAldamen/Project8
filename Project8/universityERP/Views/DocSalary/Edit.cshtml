@model universityERP.Models.Doctor

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Accounter.cshtml";
}

<h2>Edit Doctor Salary</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.doctorId)

        <div class="form-group">
            @Html.LabelFor(model => model.doctorName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.doctorName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.HiddenFor(model => model.doctorName)

            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.majorId, "majorId", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.Major.majorName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.HiddenFor(model => model.majorId)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.doctorSalary, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.doctorSalary, new { htmlAttributes = new { @class = "form-control", min = "500" } })
                @Html.ValidationMessageFor(model => model.doctorSalary, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
