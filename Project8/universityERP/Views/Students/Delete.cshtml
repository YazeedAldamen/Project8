@model universityERP.Models.Student

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

}



<h3>Are you sure you want to delete this?</h3>


<main class="main-content  mt-0">
    <section>
        <div class="page-header min-vh-75">
            <div class="container">
                <div class="row">
                    <div class="col-xl-7 col-lg-6 col-md-6 d-flex flex-column mx-auto">
                        <div class="card card-plain mt-8" style="margin-top: 0px !important">
                            <div class="card-header pb-0 text-left bg-transparent">
                                <h3 class="font-weight-bolder text-info text-gradient">Delete</h3>

                            </div>
                            <!-- Form start -->
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()
                                <div class="card-body">
                                    <form role="form">

                                        <div class="mb-3">
                                            <label>First Name</label> &emsp;&emsp;     @Html.DisplayFor(model => model.firstName)

                                        </div>

                                        <div class="mb-3">
                                            <label>Last Name</label> &emsp;&emsp;     @Html.DisplayFor(model => model.lastName)

                                        </div>

                                        <div class="mb-3">
                                            <label>Major Image</label> &emsp;&emsp;   <img src="~/images/@Html.DisplayFor(model => model.image) " height="50px" width="60px" />
                                        </div>

                                        <div class="mb-3">
                                            <label>Status</label> &emsp;&emsp;  @Html.DisplayFor(model => model.isAccepted)
                                        </div>

                                        <div class="mb-3">
                                            <label>Tawjihi GPA</label> &emsp;&emsp;  @Html.DisplayFor(model => model.tawjihiAvg)
                                        </div>

                                        <div class="mb-3">
                                            <label>Email</label> &emsp;&emsp;  @Html.DisplayFor(model => model.userEmail)
                                        </div>

                                        <div class="mb-3">
                                            <label>Major</label> &emsp;&emsp;  @Html.DisplayFor(model => model.Major.majorName)
                                        </div>




                                        <div class="text-center">
                                            <input type="submit" value="Delete" class="btn bg-gradient-info w-100 mt-4 mb-0" />


                                        </div>


                                        <br />
                                        <div class="text-center">
                                            <a href="~/Students/Index" class="btn bg-gradient-dark w-100">
                                                Back to List
                                            </a>

                                        </div>
                                    </form>
                                </div>
                            }

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>
</main>






