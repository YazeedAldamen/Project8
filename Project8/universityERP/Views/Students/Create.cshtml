@model universityERP.Models.Student

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

}













<main class="main-content  mt-0">
    <section>
        <div class="page-header min-vh-75">
            <div class="container">
                <div class="row">
                    <div class="col-xl-7 col-lg-5 col-md-6 d-flex flex-column mx-auto">
                        <div class="card card-plain mt-8" style=" margin-top:20px !important">
                            <div class="card-header pb-0 text-left bg-transparent">
                                <h3 class="font-weight-bolder text-info text-gradient">Create</h3>

                            </div>
                            <!-- Form start -->
                            @using (Html.BeginForm("Create", "facilities", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
                            {
                                @Html.AntiForgeryToken()
                                <div class="card-body">
                                    <form role="form">
                                        <label>First Name</label>
                                        <div class="mb-3">
                                            @Html.EditorFor(model => model.firstName, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.firstName, "", new { @class = "text-danger" })
                                        </div>


                                        <label>Last Name</label>
                                        <div class="mb-3">
                                            @Html.EditorFor(model => model.firstName, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.firstName, "", new { @class = "text-danger" })
                                        </div>


                                        <label>Faculity Image</label>
                                        <div class="mb-3">
                                            <input class="form-control text-box single-line" id="facilityImage" name="facilityImage" type="file" value="" accept=".png,.jpg,.jpeg,.gif,.tif,.jfif" />
                                        </div>


                                        <label>Major Name</label>
                                        <div class="mb-3">
                                            @Html.DropDownList("majorId", null, htmlAttributes: new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.majorId, "", new { @class = "text-danger" })
                                        </div>



                                        <div class="form-group">
                                            @Html.LabelFor(model => model.isAccepted, htmlAttributes: new { @class = "control-label col-md-2" })
                                            <div class="mb-3">
                                                <div class="checkbox">
                                                    @Html.EditorFor(model => model.isAccepted)
                                                    @Html.ValidationMessageFor(model => model.isAccepted, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>



                                        <label>Tawjihi GPA</label>
                                        <div class="mb-3">
                                            @Html.EditorFor(model => model.tawjihiAvg, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.tawjihiAvg, "", new { @class = "text-danger" })
                                        </div>


                                        <label>Email</label>
                                        <div class="mb-3">
                                            @Html.EditorFor(model => model.userEmail, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.userEmail, "", new { @class = "text-danger" })
                                        </div>

                                        <div class="text-center">
                                            <input type="submit" value="Create" class="btn bg-gradient-info w-100 mt-4 mb-0" />

                                        </div>

                                        <br />
                                        <div class="text-center">
                                            <a href="~/Students/Index" class="btn bg-gradient-dark w-100">
                                                Back to List
                                            </a>
                                        </div>
                                    </form>
                                </div>
                            }

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>
</main>



